@model List<PeopleDirectory.Models.PersonModel>
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-4">
        <h2>List of People</h2>
        <div>
            <table>
                <tr><th>Name</th></tr>
                @foreach (var person in Model)
                {
                    <tr><td>@person.Name</td><td>@Html.ActionLink("Click to view more Information","PersonDetails", "Home", new {name= person.Name}, null)</td></tr>
                }
            </table>
        </div>
    </div>    
</div>